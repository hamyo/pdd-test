<configuration scan="true" scanPeriod="10 minutes">
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/pdd-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/pf-splitter-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} %level [%thread] [%logger{10}] %msg%ex%n</Pattern>
        </encoder>
    </appender>
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/pdd-app-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/pdd-app-error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg %ex%n</pattern>
        </encoder>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} %-5level [%thread] [%logger{10}] %msg%ex%n</pattern>
        </encoder>
    </appender>
    <logger name="pdd-app" level="INFO">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="error" level="INFO">
        <appender-ref ref="ERROR_FILE" />
    </logger>
    <logger name="console" level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="org.hibernate.SQL" level="DEBUG" />
    <logger name="org.hibernate.util.JDBCExceptionReporter" level="ERROR" />
</configuration>